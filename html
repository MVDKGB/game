# game


<!DOCTYPE html>
<html>
    <head>
        <title>Page Title</title>
        <canvas id="canvas" width=300 height=300></canvas>
        <button id="right" onclick="rightmove()">right</button>
        <button id="left" onclick="leftmove()">left</button>
    </head>
    <body>
        <script>
        var color =['blue','green','yellow','orange','grey','violet','coral'];
        var index = 0;
        var score = 0;
        var gameover = false;
        var enem_yv = 5;
        var y = 0,enem_y = 0,enem2_y = 0,enem_x = Math.random()*300,down = false;
        if(enem_x>250||enem_x<50) {
            enem_x = Math.random()*300;
        }
        
        var player_x = 150,player_y = 250;
        var player_xv = 2;
            var canvas = document.getElementById('canvas');
            var ctx = canvas.getContext('2d');
            window.onload = draw;
            function draw() { ctx.clearRect(0,0,canvas.width,canvas.height);
                
            
                ctx.beginPath();
                ctx.fillStyle = "white";
                ctx.fillRect(150,y,5,40);
                ctx.closePath(); 
                
                ctx.beginPath();
                ctx.fillStyle = "white";
                ctx.fillRect(150,y+50,5,40);
                ctx.closePath(); 
                
                ctx.beginPath();
                ctx.fillStyle = "white";
                ctx.fillRect(150,y+100,5,40);
                ctx.closePath(); 
                
                ctx.beginPath();
                ctx.fillStyle = "white";
                ctx.fillRect(150,y+150,5,40);
                ctx.closePath(); 
                
                
                ctx.beginPath();
                ctx.fillStyle = "white";
                ctx.fillRect(150,y+200,5,40);
                ctx.closePath(); 
                
                ctx.beginPath();
                ctx.fillStyle = "white";
                ctx.fillRect(150,y+250,5,40);
                ctx.closePath(); 
                
                ctx.beginPath();
                ctx.fillStyle = "white";
                ctx.fillRect(150,y+300,5,40);
                ctx.closePath(); 
                
                
                //player
                ctx.beginPath();
                ctx.fillStyle = "red";
                ctx.fillRect(player_x,player_y,50,50);
                ctx.closePath();
                //enemy
                ctx.beginPath();
                ctx.fillStyle = color[index];
                ctx.fillRect(enem_x,enem_y,50,50);
                ctx.closePath();
                
                //gameover display
                if(gameover == true) {
                    
                    clearInterval(id);
                
                    ctx.fillStyle = "white";
                    ctx.font = "30px Arial";
                    ctx.fillText("GAME   OVER",60,60);
                    ctx.fillText("Your Score :" + score,60,100);
                }
        
                 
            }
            
           var id = setInterval(animate,100);
                function animate() {
                if(enem_x<=player_x+50&&enem_x>=player_x&&enem_y>=player_y-50) {
                    gameover = true;
                    navigator.vibrate(500);
                }
        if(enem_x+50<=player_x+50&&enem_x+50>=player_x&&enem_y>=player_y-50) {
                    gameover = true;
                    navigator.vibrate(500);
                }
        
                    draw(y += 2,enem_y+=enem_yv);
                    if(y+250 > canvas.height - 40) {
                        y = -40;
                        
                    }
                    if(enem_y>canvas.height ) {
                        enem_y = -50;
                        index++;
                        score++;
                        
                        enem_yv += 1;
                        
                        
                            
                        
                        if(index>=color.length) {
                            index = 0;
                        }
                        enem_x = Math.random()*300;
                        if(enem_x < 50 || enem_x >= canvas.width - 50) {
                            enem_x = Math.random()*300;
                        }
                    }
                }
                
                function rightmove() {
                
                    draw(player_x += player_xv);
                    if(player_x >= canvas.width - 50) {
                        player_x = canvas.width - 50;
                    }
                requestAnimationFrame(rightmove);
             }   
             function leftmove() {
             
                
                    draw(player_x -= player_xv);
                    if(player_x <= 0) {
                        player_x = 0;
                    }
                requestAnimationFrame(leftmove);
             }   
             
        </script>
    </body>
</html>
